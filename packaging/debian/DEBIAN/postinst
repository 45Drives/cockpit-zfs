# #!/bin/bash

# echo "[INFO] Making Houston scripts executable..."
# chmod +x /usr/local/bin/houston/*.sh

# echo "[INFO] Installing Python dependencies..."
# pip3 install --upgrade pip
# pip3 install uvicorn fastapi sqlite

# echo "[INFO] Running installation script..."
# /usr/local/bin/houston/install.sh
#!/bin/bash
set -e
echo "Installing missing dependencies..."
apt-get update
apt-get install -y python3-libzfs python3-pip sqlite3 python3-fastapi python3-uvicorn
# Reload systemd
systemctl daemon-reload

# Enable services
systemctl enable houston-dbus.service
systemctl enable fastapi-notifications.service

# Start services
systemctl start houston-dbus.service || true
systemctl start fastapi-notifications.service || true
